/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@app1/*": [
        "projects/app1/src/app/*"
      ],
      "@app2/*": [
        "projects/app2/src/app/*"
      ],
      "@main/*": [
        "projects/main/src/app/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/app1/tsconfig.app.json"
    },
    {
      "path": "./projects/app1/tsconfig.spec.json"
    },
    {
      "path": "./projects/app2/tsconfig.app.json"
    },
    {
      "path": "./projects/app2/tsconfig.spec.json"
    },
    {
      "path": "./projects/main/tsconfig.app.json"
    },
    {
      "path": "./projects/main/tsconfig.spec.json"
    },
    {
      "path": "./projects/app3/tsconfig.app.json"
    },
    {
      "path": "./projects/app3/tsconfig.spec.json"
    },
    {
      "path": "./projects/app4/tsconfig.app.json"
    },
    {
      "path": "./projects/app4/tsconfig.spec.json"
    }
  ]
}
